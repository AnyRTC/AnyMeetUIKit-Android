<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/ll_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal"
     >


            <LinearLayout
                android:id="@+id/ll_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_doc_icon" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:text="nickname"
                    android:textColor="@color/hint" />



            </LinearLayout>


            <TextView
                android:id="@+id/tv_other_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_other"
                android:layout_toRightOf="@+id/ll_icon"
                android:maxLines="5"
                android:padding="10dp"
                android:layout_marginLeft="12dp"
                android:text="总结.doc\n是 /n d" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="12dp"
       >

        <LinearLayout
            android:id="@+id/ll_icon_self"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_self_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_doc_icon" />

            <TextView
                android:id="@+id/tv_self_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="10"
                android:singleLine="true"
                android:text="nickname"
                android:textColor="@color/hint" />



        </LinearLayout>
        <TextView
            android:id="@+id/tv_self_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_self"
            android:padding="10dp"
            android:maxLines="5"
            android:layout_toLeftOf="@+id/ll_icon_self"
            android:text="总结.doc"
            android:textColor="@color/baise" />
    </RelativeLayout>

</RelativeLayout>